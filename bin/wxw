#!/usr/bin/env node
childp = require('child_process');
path   = require('path');
childp.execFile(path.join(__dirname, "wc.exe"), process.argv.slice(2), {cwd:process.cwd(), shell:true }, (error, stdout, stderr) => 
{ 
    if (error)
    {
        console.error(error);
    }
    else
    {
        console.log(stdout); 
        console.error(stderr); 
    }
});
